---
import BaseLayout from "./BaseLayout.astro";
import "../styles/main.scss";
import Navbar from "../components/Navbar.astro";

const {title, description, heroUrl, activeNav} = Astro.props;
---

<BaseLayout {title} {description} {heroUrl}>
    <Navbar {activeNav}/>
    <div class="container">
        <main>
            <slot/>
        </main>
    </div>
</BaseLayout>

<style lang="scss" is:global>
    @use "../styles/colors";

    .container {
        display: flex;
        justify-content: center;

        main {
            width: 70vw;
            height: 100%;
            min-height: 100vh;

            background-color: colors.$stone-900;

            @media (max-width: colors.$medium) {
                width: 100%;
                padding: 0 2ch 5em;
            }
        }
    }
</style>
