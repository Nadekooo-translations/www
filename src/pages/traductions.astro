---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const trans = (await getCollection("translations")).reverse();
---

<Layout title="Traductions" description="Mes traductions">
  <img
    src="https://media1.tenor.com/m/yMtzIUk9ab4AAAAC/orson-welles-welles.gif"
    alt='GIF de Orson Welles avec les mots "Pas mal non ? C&apos;est franÃ§ais."'
  />

  <div class="translations-container">
    {
      trans.map((t) => (
        <a href={`/traductions/${t.id}`}>
          <article>
            <h3>{t.data.name}</h3>
          </article>
        </a>
      ))
    }
  </div>
</Layout>

<style lang="scss">
  @use "../styles/colors";

  a {
    text-decoration: none;
    color: colors.$white;

    article {
      h3 {
        color: colors.$red-400;

        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
</style>
